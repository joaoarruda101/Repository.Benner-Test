@model Estacionamento.Models.VeiculoModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1 style="margin: 20px;">Deletar Registro</h1>
    <hr />
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Placa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Placa)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entrada)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entrada)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Saida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Saida)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duracao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duracao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TempoCobrado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TempoCobrado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecoEstatacionamento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecoEstatacionamento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ValorPagar)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ValorPagar)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-dark">Voltar</a>
        </form>
    </div>
</div>
