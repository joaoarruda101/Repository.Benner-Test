@model Estacionamento.Models.VeiculoModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1 style="margin: 20px;">Registrar saida</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Saida" class="control-label"></label>
                    <input asp-for="Saida" class="form-control" />
                    <span asp-validation-for="Saida" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-dark">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

